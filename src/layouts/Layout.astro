---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--page-transition-duration: 500ms;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	.page-transition {
		animation: fadeOut var(--page-transition-duration) ease-in-out;
	}

	@keyframes fadeOut {
		from { opacity: 1; }
		to { opacity: 0; }
	}

	.fade-in {
		animation: fadeIn var(--page-transition-duration) ease-in-out;
	}

	@keyframes fadeIn {
		from { opacity: 0; }
		to { opacity: 1; }
	}

	.slide-up {
		animation: slideUp var(--page-transition-duration) ease-out;
	}

	@keyframes slideUp {
		from { 
			transform: translateY(20px);
			opacity: 0;
		}
		to {
			transform: translateY(0);
			opacity: 1;
		}
	}
</style>
