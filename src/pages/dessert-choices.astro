---
import Layout from '../layouts/Layout.astro';
import ChoiceForm from '../components/ChoiceForm';
import { dessertChoices } from '../data/choices';
import { theme } from '../styles/theme';
---

<Layout title="Dessert Choices">
  <main>
    <ChoiceForm
      client:load
      title="Which dessert we eatin?"
      choices={dessertChoices}
      stateKey="selectedDesserts"
      inputName="dessert"
      nextPage="/activity-choices"
      submitText="Continue"
    />
  </main>
</Layout>

<style define:vars={{ bgColor: theme.colors.background.yellow }}>
  main {
    min-height: 100vh;
    background-color: var(--bgColor);
    padding: 2rem;
    text-align: center;
  }
</style> 