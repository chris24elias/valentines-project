---
import Layout from '../layouts/Layout.astro';
import { theme } from '../styles/theme';
import SelectionsDisplay from '../components/SelectionsDisplay';
---

<Layout title="Thank You!">
  <main>
    <div class="content">
      <h1>Thank you for being so amazing! ❤️</h1>
      <p>I'm the luckiest person to have you in my life!</p>
      <img src={'src/images/Naughty Funny Gif (2).gif'} alt="Celebration gif" />
      <SelectionsDisplay client:load />
      <p>screenshot this and send it to me :)</p>
    </div>
  </main>
</Layout>

<style define:vars={{ bgColor: theme.colors.background.yellow }}>
  main {
    min-height: 100vh;
    background-color: var(--bgColor);
    padding: 2rem;
    text-align: center;
  }

  .content {
    max-width: 1200px;
    margin: 0 auto;
    animation: fadeIn 1s ease-in;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #FF6B6B;
  }

  p {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    color: #666;
  }

  img {
    max-width: 300px;
    border-radius: 15px;
    margin: 2rem 0;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style> 