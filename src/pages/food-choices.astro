---
import Layout from '../layouts/Layout.astro';
import ChoiceForm from '../components/ChoiceForm';
import { foodChoices } from '../data/choices';
import { theme } from '../styles/theme';
---

<Layout title="Food Choices">
  <main>
    <ChoiceForm
      client:load
      title="What food would you like to eat?"
      choices={foodChoices}
      stateKey="selectedFoods"
      inputName="food"
      nextPage="/dessert-choices"
      submitText="Continue"
    />
  </main>
</Layout>

<style define:vars={{ bgColor: theme.colors.background.yellow }}>
  main {
    min-height: 100vh;
    background-color: var(--bgColor);
    padding: 2rem;
    text-align: center;
  }
</style> 