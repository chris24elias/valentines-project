---
import type { FoodChoice } from '../types/forms';
import { theme } from '../styles/theme';

interface Props {
  choices: FoodChoice[];
  name: string;
}

const { choices, name } = Astro.props;
---

<div class="choice-grid">
  {choices.map((choice) => (
    <div class="choice-item">
      <img src={choice.image_url} alt={choice.text} />
      <label>
        <input type="checkbox" name={name} value={choice.id} />
        <span>{choice.text}</span>
      </label>
    </div>
  ))}
</div>

<style>
  .choice-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    padding: 2rem;
  }

  .choice-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .choice-item img {
    width: 150px;
    height: 150px;
    object-fit: cover;
    border-radius: 10px;
    margin-bottom: 1rem;
  }

  label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
</style> 