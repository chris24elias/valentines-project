---
import type { FoodChoice } from '../types/forms';
import { theme } from '../styles/theme';

interface Props {
  choices: FoodChoice[];
  name: string;
}

const { choices, name } = Astro.props;
---

<div class="choice-grid">
  {choices.map((choice) => (
    <div class="choice-item">
      <img src={choice.image_url} alt={choice.text} />
      <label>
        <input type="checkbox" name={name} value={choice.id} />
        <span>{choice.text}</span>
      </label>
    </div>
  ))}
</div>

<style>
  .choice-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .choice-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 15px;
    transition: transform 0.2s ease;
  }

  .choice-item:hover {
    transform: translateY(-5px);
  }

  .choice-item img {
    width: 200px;
    height: 200px;
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  label {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    font-size: 1.1rem;
    margin-top: 0.5rem;
  }

  input[type="checkbox"] {
    width: 20px;
    height: 20px;
  }
</style> 